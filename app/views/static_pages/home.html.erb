<!-- Ici pas de provide, on veut afficher le titre simplement vu qu'il
	s'agit de la page d'accueil -->

<% if signed_in? %>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
	</div>
<% else %>
	<div class="center hero-unit">
		<h1>Bienvenue sur My App</h1>
			
		<p> This is home page for the <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a> simple application. </p> <br/>

		<%= link_to "S'inscrire", signup_path, class: "btn btn-large btn-primary" %>
	</div>
<% end %>