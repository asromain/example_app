<%provide(:title, "Tous les utilisateurs") %>

<h1>Tous les utilisateurs</h1>

<%= will_paginate %>
	
<ul class="users">
	<% @users.each do |user| %>
		<li>
			<%= gravatar_for user, size: 50 %>
			<%= link_to user.name, user %>
			<% if current_user.admin? && !current_user?(user) %>
    			| <%= link_to "supprimer", user, method: :delete, data: { confirm: "Etes vous sur?" } %>
  			<% end %>
		</li>
	<% end %>
</ul>

<%= will_paginate %>
